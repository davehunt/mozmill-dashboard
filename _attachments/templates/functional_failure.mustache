    <fieldset id="filter">
      <legend>Filter</legend>

      <div id="branch-selection">
        <label>Branch:</label>
        <span>All</span>
        {{#firefox_versions}}
          <span>{{{.}}}</span>
        {{/firefox_versions}}
      </div>

      <div id="os-selection">
        <label>OS:</label>
        <span>All</span>
        <span>Linux</span>
        <span>Mac</span>
        <span>Win</span>
      </div>

      <div id="date">
        <label>Range:</label>
        <input id="start-date" class="datepicker" type="text" value="" size="11" /> -
        <input id="end-date" class="datepicker" type="text" value="" size="11" />
      </div>
    </fieldset>

    <h2>Results for <em>{{test_module}} | {{test_function}}</em></h2>

    <table id="results">
      <thead>
        <tr>
          <th>Date</th>
          <th>Application</th>
          <th>Version</th>
          <th>Build</th>
          <th>Platform</th>
          <th>Locale</th>
          <th>Error Message</th>
          <!--<th>Bugs</th>-->
        </tr>
      </thead>
      <tbody>
      {{#reports}}
        <tr>
          <td><a href="{{report_link}}">{{time_start}}</a></td>
          <td>{{application_name}}</td>
          <td>{{application_version}}</td>
          <td>{{platform_buildId}}</td>
          <td>{{system_name}} {{system_version}}</td>
          <td>{{application_locale}}</td>
          <td>{{message}}</td>
          <!--<td>{{bugs}}</td>-->
        </tr>
      {{/reports}}
      </tbody>
    </table>
