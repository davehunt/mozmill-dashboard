    <fieldset id="filter">
      <legend>Filter</legend>

      <div id="branch-selection">
        <label>Branch:</label>
        <span>All</span>
        {{#firefox_versions}}
          <span>{{{.}}}</span>
        {{/firefox_versions}}
      </div>

      <div id="os-selection">
        <label>OS:</label>
        <span>All</span>
        <span>Linux</span>
        <span>Mac</span>
        <span>Win</span>
      </div>

      <div id="date">
        <label>Range:</label>
        <input id="start-date" class="datepicker" type="text" value="" size="11" /> -
        <input id="end-date" class="datepicker" type="text" value="" size="11" />
      </div>
    </fieldset>

    <h2>Top Failures for Remote Tests</h2>

    <table id="results">
      <thead>
        <tr>
          <th>Module</th>
          <th>Function</th>
          <th>Application</th>
          <th>Version</th>
          <th>Platform</th>
          <th># Fail</th>
          <!--<th>Bugs</th>-->
        </tr>
      </thead>
      <tbody>
      {{#reports}}
        <tr>
          <td>{{test_module}}</td>
          <td><a href="{{failure_link}}">{{test_function}}</a></td>
          <td>{{application_name}}</td>
          <td>{{application_version}}</td>
          <td>{{system_name}}</td>
          <td>{{failure_count}}</td>
          <!--<td>{{bugs}}</td>-->
        </tr>
      {{/reports}}
      </tbody>
    </table>
